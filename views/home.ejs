<htmL>

    <head>

        <title><%=title%></title>

        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
        <link rel="stylesheet" href="../assets/css/home.css">
    </head>

    <body>
       <div class="conainer">
        <fieldset>
            <legend class="legend d-flex justify-content-center" >To Do List App</legend>
          
            <!-- Form controls and other elements here -->
          </fieldset>
        <form method="POST" action="" >

            <label>DESCRIPTION</label><br>
            <input type="text" placeholder="What do you need to do?" required>
            
            <br>
            <label>CATEGORY</label><br>
            <select class="form-select" aria-label="Dropdown List">
                <option selected>Choose a Category</option>
                <option value="option1">Personal</option>
                <option value="option2">Work</option>
                <option value="option3">Cleaning</option>
                <option value="option4">School</option>
                <option value="option5">Other</option>
              </select>

              
              <div class="container">
                <label>DUE DATE</label>
                <!-- Calendar Date Input -->
                <div class="form-group">
                  <label for="datepicker">dd/mm/yyyy</label>
                  <input type="date" class="form-control" id="datepicker">
                </div>
            
              </div>

        </form>
       </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.min.js"></script>
        <script src="../assets/js/home.js"></script>
    </body>
</htmL>